<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ryan.keyboardscrambler.HomeScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/startTV"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:textColor="#ff0099cc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:id="@+id/howToPlayTV"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/startTV"
        android:gravity="center_horizontal"
        android:textColor="#ff0099cc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:id="@+id/scoresTV"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/howToPlayTV"
        android:gravity="center_horizontal"
        android:textColor="#ff0099cc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate on Play Store"
        android:id="@+id/rateTV"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/scoresTV"
        android:gravity="center_horizontal"
        android:textColor="#ff0099cc"/>
</RelativeLayout>
